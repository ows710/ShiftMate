/**
 * @event
 * @name onpageload
 * @description 화면 초기화에 필요한 로직을 수행한다.
 */
scwin.onpageload = function () {
    scwin.param = $c.data.getParameter();
    dma_memberBasic.setJSON(scwin.param.data);
    if ($c.win.isAdmin() == false) {
        btn_changePassword.hide();
    }

    const codeOptions = [{ code: "00001", compID: "sbx_Duty" },
    { code: "00002", compID: "sbx_Postion" },
    { code: "00021", compID: "sbx_JoinClass" },
    { code: "00023", compID: "sbx_JobFamily" },
    { code: "00024", compID: "sbx_Job" }];

    $c.data.setCommonCode(codeOptions);

    scwin.tabDrawStatus = { tab_memberDetail: true, tab_memberFamily: false, tab_memberProject: false };
    $c.data.setChangeCheckedDc(dma_memberBasic);
};

/**
 * @event
 * @name ondataload
 * @description 화면 초기화 데이터가 모두 로딩되면 발생하는 이벤트
 */
scwin.ondataload = function () {
    scwin.searchMemberBasic();
};

/**
 * @method
 * @name searchMemberBasic
 * @description 사원 정보를 조회한다.
 * @hidden N
 * @exception 
 */
scwin.searchMemberBasic = function () {
    $c.sbm.execute(sbm_getLoginMemberBasic);
};

/**
 * @method
 * @name searchMemberBasicCallback
 * @description 인사정보 조회 후 callback 함수
 * @param {string} resBody Submission 결과를 담은 객체
 * @hidden N
 * @exception 
 */
scwin.searchMemberBasicCallback = function (resBody) {
    const data = resBody.responseJSON.data[0];
    dma_memberBasic.setJSON(data);
    dma_memberBasic.initRowStatus();
    img_member.setSrc($c.sbm.getContextPath() + "/member/viewProfileImage/" + data.EMP_CD);
};

/**
 * @event
 * @name btn_saveMemberBasic_onclick
 * @description 업데이트(등록, 수정, 삭제)된 코드 그룹을 데이터베이스에 저장한다.
 */
scwin.btn_saveMemberBasic_onclick = async function () {
    if (dma_memberBasic.getModifiedIndex().length > 0) {
        if (($c.data.validateGroup(grp_memberBasic1)) && ($c.data.validateGroup("grp_memberBasic2", null, tac_memberInfo, "tab_memberDetail"))) {
            if (await $c.win.confirm($c.data.getMessage("MSG_CM_00042"))) { scwin.saveMemberBasicConfirmCallback(); }
        }
    } else {
        $c.win.alert($c.data.getMessage("MSG_CM_00005"));
    }
};

/**
 * @method
 * @name saveMemberBasicConfirmCallback
 * @description 사원정보 저장 후 팝업창의 확인 버튼 클릭 시 수행되는 callback 함수
 * @hidden N
 * @exception 
 */
scwin.saveMemberBasicConfirmCallback = function () {
    $c.sbm.execute(sbm_saveMemberInfo);
};

/**
 * @event
 * @name btn_cancelMemberBasic_onclick
 * @description 업데이트된 사원 기본 정보를 업데이트 전 상태로 되돌린다.
 */
scwin.btn_cancelMemberBasic_onclick = async function () {
    if (dma_memberBasic.getModifiedIndex().length > 0) {
        if (await $c.win.confirm($c.data.getMessage("MSG_CM_00043"))) {
            scwin.cancelMemberBasicConfirmCallback();
        }
    } else {
        $c.win.closePopup();
    }
};

/**
 * @method
 * @name cancelMemberBasicConfirmCallback
 * @description 사원정보 confirm창에서 취소 버튼을 누른 경우 callback 함수
 * @hidden N
 * @exception 
 */
scwin.cancelMemberBasicConfirmCallback = function () {
    $c.win.closePopup();
};

/**
 * @event
 * @name btn_uploadImage_onclick
 * @description 사원 이미지 파일을 업로드한다.
 */
scwin.btn_uploadImage_onclick = function () {
    const imageDataSeq = dma_memberBasic.get("IMAGE_DATA_SEQ");
    const data = { dataSeq: imageDataSeq, callbackFn: "scwin.uploadImageFileCallback" };
    const opt = {
        id: "H3P01",
        popupName: "사진 업로드",
        width: "650", height: "180"
    };

    $c.win.openPopup("/ui/HM/HM003P01.xml", opt, data);
};

/**
 * @method
 * @name uploadImageFileCallback
 * @description 이미지를 업로드한 후 실행되는 callback 함수
 * @param {Object} param upload 이미지에 대한 정보를 가진 객체
 * @hidden N
 * @exception 
 */
scwin.uploadImageFileCallback = function (param) {
    dma_memberBasic.set("FILE_STORED_PATH", param.fileStorePath);
    dma_memberBasic.set("STORED_FILE_NM", param.storedFileList);
    dma_memberBasic.set("ORIGIN_FILE_NM", param.localfileList);
    $c.sbm.execute(sbm_saveMemberInfo);
};

/**
 * @event
 * @name btn_searchOrgan_onclick
 * @description 조직 정보를 선택할 수 있는 팝업창을 오픈한다.
 */
scwin.btn_searchOrgan_onclick = async function (e) {
    const rowJSON = {};
    const data = { "data": rowJSON, callbackFn: "scwin.searchOrganCallback" };
    const opt = {
        id: "H3P02",
        popupName: "조직정보 선택",
        width: 340, height: 530
    };
    await $c.win.openPopup("/ui/HM/HM003P02.xml", opt, data);
};

/**
 * @method
 * @name searchOrganCallback
 * @description 조직 정보 선택 후 실행되는 callback 함수
 * @param {string} returnValue 선택한 조직 정보를 담은 객체
 * @hidden N
 * @exception 
 */
scwin.searchOrganCallback = function (returnValue) {
    if (!$c.util.isEmpty(returnValue) && (!$c.util.isEmpty(returnValue.ORG_CD) || !$c.util.isEmpty(returnValue.ORG_NM))) {
        dma_memberBasic.set("ORG_CD", returnValue.ORG_CD);
        dma_memberBasic.set("ORG_NM", returnValue.ORG_NM);
    };
};

/**
 * @event
 * @name btn_changePassword_onclick
 * @description 비밀번호 변경 버튼을 클릭했을 때 동작하는 이벤트.
 */
scwin.btn_changePassword_onclick = async function () {
    const data = { "empCd": dma_memberBasic.get("EMP_CD") };
    const options = {
        id: "settingPassword",
        popupName: "비밀번호 변경",
        width: "500px",
        height: "220px"
    };
    await $c.win.openPopup("/cm/xml/settingPassword.xml", options, data);
};

/**
 * @method
 * @name sbm_saveMemberInfo_submitdone
 * @description 사원정보 저장 Submission후 실행되는 callback 함수
 * @param {Object} e submission 결과를 담은 객체
 * @hidden N
 * @exception 
 */
scwin.sbm_saveMemberInfo_submitdone = function (e) {
    $c.win.alert(e.responseJSON.rsMsg.statusMsg, function () {
        dma_memberBasic.initRowStatus();
        $c.win.closePopup();
    });
};

scwin.udc_qrCode_ongenerateCode = function () {
    const info = {
        "name": ibx_empNm.getValue(),
        "cell": ibx_cellPhone1.getValue() + ibx_cellPhone2.getValue() + ibx_cellPhone3.getValue(),
        "email": ibx_email.getValue(),
        "org": "inswave"
    };

    udc_qrCode.vcardToQrCode(info);
};
